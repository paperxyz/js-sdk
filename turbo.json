{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev-ews": {
      "cache": false,
      "persistent": true
    },
    "dev-checkout": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["ZEET_DEPLOYMENT_URL", "SDK_VERSION"]
}
